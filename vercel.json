{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "installCommand": "npm install",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "24"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.ts"
    }
  ]
}
